rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    function sanitize(uid) {
      return uid.split(':').join('_')
                .split('/').join('_')
                .split('.').join('_');
    }

    function isAllowedUserCollection(collection) {
      return collection == 'avatars' ||
             collection == 'videos' ||
             collection == 'voices' ||
             collection == 'projects';
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // User-scoped data folders
    match /userData/{userId}/{collection}/{fileName} {
      allow read, write: if isAuthenticated() &&
        isAllowedUserCollection(collection) &&
        sanitize(userId) == sanitize(request.auth.uid);
    }
    
    // Legacy paths (to be removed after migration)
    match /voices/{fileName} {
      allow read, write: if isAuthenticated() && 
        fileName.matches('voice_' + request.auth.uid + '_.*');
    }
    
    match /avatars/{fileName} {
      allow read, write: if isAuthenticated() && 
        fileName.matches('avatar_' + request.auth.uid + '_.*');
    }
    
    match /videos/{fileName} {
      allow read, write: if isAuthenticated() &&
        fileName.matches('video_' + request.auth.uid + '_.*');
    }
    
    // Project-specific files - users can only access files for their own projects
    match /projects/{projectId}/{fileType}/{fileName} {
      // Allow access only if user owns the project
      allow read, write: if isAuthenticated() && 
        request.auth.uid == projectId.split('_')[1]; // Extract userId from projectId format
    }

    // Viewer uploads to a streamer's namespace
    // Path: uploads/{userId}/{viewerId}/{fileName}
    // - Authenticated viewers can write only to their own viewerId folder
    // - Streamers can read/delete within their userId namespace
    match /uploads/{userId}/{viewerId}/{fileName} {
      allow write: if isAuthenticated() &&
        sanitize(viewerId) == sanitize(request.auth.uid);

      allow read, delete: if isAuthenticated() &&
        (sanitize(userId) == sanitize(request.auth.uid) ||
         sanitize(viewerId) == sanitize(request.auth.uid));
    }
    
    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
