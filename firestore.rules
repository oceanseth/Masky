rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Helper function to check if user owns the project
    function isProjectOwner(projectData) {
      return isAuthenticated() && request.auth.uid == projectData.userId;
    }

    function isAdminUser() {
      return isAuthenticated()
        && exists(/databases/$(database)/documents/system/adminData)
        && get(/databases/$(database)/documents/system/adminData).data.adminUsers is list
        && request.auth.uid in get(/databases/$(database)/documents/system/adminData).data.adminUsers;
    }
    
    // Users collection - allow public read access for username lookup (for user profile pages)
    // Allow public queries to find users by twitchUsername
    match /users/{userId} {
      // Allow public read access (both get and list/query operations)
      allow read: if true; // Public read for username lookup and user profile pages
      allow write: if isOwner(userId);
      
      // User subscriptions subcollection - users can only access their own subscriptions
      match /subscriptions/{subscriptionId} {
        allow read, write: if isOwner(userId);
      }
      
      // User events subcollection - users can only access their own events
      match /events/{eventType} {
        allow read, write: if isOwner(userId);
        
        // Allow public read access for Twitch events (for overlay)
        allow read: if eventType.matches('twitch_.*');
        
        // Allow public read access for donation events (for overlay)
        allow read: if eventType == 'donation';
        
        // Allow public read access for custom video events (for overlay)
        allow read: if eventType == 'custom-video';
        
        // Allow public read access for redemption events (for overlay)
        allow read: if eventType == 'redemption';
        
        // Event alerts subcollection
        match /alerts/{alertId} {
          allow read, write: if isOwner(userId);
          
          // Allow public read access for Twitch event alerts (for overlay)
          allow read: if eventType.matches('twitch_.*');
          
          // Allow public read access for donation event alerts (for overlay)
          allow read: if eventType == 'donation';
          
          // Allow public read access for custom video event alerts (for overlay)
          allow read: if eventType == 'custom-video';
          
          // Allow public read access for redemption event alerts (for overlay)
          allow read: if eventType == 'redemption';
        }
      }

      // User uploads subcollection - viewers may create records for their own uploads, streamers can manage
      match /uploads/{uploadId} {
        // Allow streamer to read/manage their uploads
        allow read, update, delete: if isOwner(userId);
        // Allow a viewer to create a record only for themselves
        allow create: if isAuthenticated() &&
          request.resource.data.viewerId is string &&
          request.resource.data.viewerId == request.auth.uid;
      }

      // User voices subcollection - users can only access their own voices
      match /voices/{voiceId} {
        allow read, write: if isOwner(userId);
        allow create: if isOwner(userId) && request.resource.data.userId == userId;
      }

      // User avatars subcollection - users can only access their own avatars
      match /avatars/{avatarId} {
        allow read, write: if isOwner(userId);
        allow create: if isOwner(userId) && request.resource.data.userId == userId;
      }

      // HeyGen avatar groups (user-facing "avatars")
      // Allow public read access for user page avatar display
      match /heygenAvatarGroups/{groupId} {
        allow read: if true; // Public read for user page
        allow write: if isOwner(userId);
        allow create: if isOwner(userId) && request.resource.data.userId == userId;

        // Assets for a group (images the user uploaded/attached)
        match /assets/{assetId} {
          allow read: if true; // Public read for user page
          allow write: if isOwner(userId);
          allow create: if isOwner(userId) && request.resource.data.userId == userId;
        }
      }

      // Chat messages subcollection - streamers can read their own chat messages
      match /chatMessages/{messageId} {
        allow read: if isOwner(userId);
        allow write: if false; // Only server can write chat messages (via webhook)
      }
    }

    match /system/adminData {
      allow read: if isAdminUser();
      allow write: if false;

      match /userTokens/{adminUserId} {
        allow read: if isAdminUser();
        allow write: if false;
      }
    }
    
    // Bot tokens - only server can access (via Admin SDK, which bypasses rules)
    // Explicitly deny all client access for security
    match /system/bot_tokens {
      allow read, write: if false; // Only Admin SDK can access (bypasses rules)
    }
    
    // System deployment events - allow public read for overlay auto-reload
    match /_system/deployments {
      allow read: if true; // Public read for deployment notifications
      allow write: if false; // Only server can write deployment events
      
      match /events/{eventId} {
        allow read: if true; // Public read for deployment event notifications
        allow write: if false; // Only server can write deployment events
      }
    }
    
    // Projects collection - users can only access their own projects
    match /projects/{projectId} {
      // Allow read/write only if user owns the project
      allow read, write: if isAuthenticated() && 
        resource.data.userId == request.auth.uid;
      
      // Allow create only if user is setting themselves as the owner
      allow create: if isAuthenticated() && 
        request.resource.data.userId == request.auth.uid;
      
      // Allow public read access for active Twitch projects (for overlay and user pages)
      // Twitch subscriptions may be stored as objects, so we gate on platform + isActive
      allow read: if resource.data.platform == 'twitch' &&
        resource.data.isActive == true;
      
      // Allow public read access for active projects by userId (for user profile pages)
      allow read: if resource.data.isActive == true;
    }
    
    // Voices collection - users can only access their own voices
    match /voices/{voiceId} {
      // Allow read/write only if user owns the voice
      allow read, write: if isAuthenticated() && 
        resource.data.userId == request.auth.uid;
      
      // Allow create only if user is setting themselves as the owner
      allow create: if isAuthenticated() && 
        request.resource.data.userId == request.auth.uid;
    }
    
    // Project alerts subcollection - users can only access alerts for their own projects
    match /projects/{projectId}/alerts/{alertId} {
      // Allow read/write only if user owns the parent project
      allow read, write: if isAuthenticated() && 
        get(/databases/$(database)/documents/projects/$(projectId)).data.userId == request.auth.uid;
      
      // Allow create only if user owns the parent project
      allow create: if isAuthenticated() && 
        get(/databases/$(database)/documents/projects/$(projectId)).data.userId == request.auth.uid;
    }

    // Donations collection - allow read for user's own donations, write only by server
    match /donations/{donationId} {
      // Allow read if user is authenticated and is either the creator or the viewer
      // This covers both get (single document) and list (query) operations
      allow read: if isAuthenticated() && 
        (resource.data.userId == request.auth.uid || resource.data.viewerId == request.auth.uid);
      
      // Allow public read access to donations for a specific creator (for top donors list on user page)
      // This allows anyone to see donations made to a specific creator (but not who made them unless they're the viewer)
      allow read: if resource.data.userId != null;
      
      allow write: if false; // Only server can write donations
    }

    // Custom videos collection - allow read for creator and viewer, write only by server
    match /customVideos/{videoId} {
      // Allow read if user is authenticated and is either the creator or the viewer
      // This covers both get (single document) and list (query) operations
      allow read: if isAuthenticated() && 
        (resource.data.userId == request.auth.uid || resource.data.viewerId == request.auth.uid);
      allow write: if false; // Only server can write custom videos
    }
    
    // Redemptions collection - redemption instances (when users redeem points)
    match /redemptions/{redemptionId} {
      // Streamers can read all redemptions for their channel
      allow read: if isAuthenticated() && 
        resource.data.userId == request.auth.uid;
      
      // Viewers can read their own redemptions
      allow read: if isAuthenticated() && 
        resource.data.viewerId == request.auth.uid;
      
      // Streamers can update redemptions (e.g., dismiss them)
      allow update: if isAuthenticated() && 
        resource.data.userId == request.auth.uid;
      
      // Only server can create redemptions (via API endpoint)
      // This ensures proper validation and point deduction
      allow create: if false; // Only server can create redemptions
      allow delete: if false; // Only server can delete redemptions
    }
    
    // Note: Redemption types (configuration) are stored in users/{userId}/userPageConfig.redemptions
    // These are already protected by the users collection rules:
    // - Only the streamer (owner) can write to their userPageConfig
    // - Public read access allows viewers to read redemption types to display available redemptions
    
    // System deployment events - allow public read access for overlay refresh
    match /_system/deployments/events/{eventId} {
      allow read: if true;
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}